{
    // Enforcing options
    "bitwise": true,
    "curly": true,
    "eqeqeq": true,
    "immed": true,
    "indent": 4,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "nonbsp": true,
    "quotmark": "single",
    "undef": true,
    "unused": true,
    "strict": true,
    "trailing": true,

    // Relaxing options
    "esnext": true,
    "smarttabs": true,

    // Environments
    "browser": true,
    "devel": true,

    // Custom globals
    "globals": {
        "ig": true
    }
}
